#!/usr/bin/env bash

update() {
  pkill spotify
  ~/.spicetify/spicetify update
  ~/.spicetify/spicetify restore backup apply
}

install() {
  pkill spotify
  curl -fssl https://raw.githubusercontent.com/spicetify/cli/main/install | sh
}

market() {
  pkill spotify
  curl -fsSL https://raw.githubusercontent.com/spicetify/spicetify-marketplace/main/resources/install.sh | sh
}

case "$1" in
--install)
  install
  ;;
--update)
  update
  ;;
--market)
  market
  ;;
*)
  update
  ;;
esac
