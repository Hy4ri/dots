{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "ignore-gtk-theme": true,
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "layer-shell": true,
  "cssPriority": "highest",
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "control-center-layer": "overlay",
  "notification-2fa-action": false,
  "timeout": 6,
  "timeout-low": 3,
  "timeout-critical": 0,
  "notification-window-width": 400,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "fit-to-screen": false,
  "control-center-height": 720,
  "control-center-width": 300,
  "notification-icon-size": 24,
  "script-fail-notify": true,
  "widgets": [
    "title",
    "buttons-grid",
    "volume",
    "backlight",
    "mpris",
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "󰩹"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "mpris": {
      "autohide": true
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": true,
      "show-per-app-icon": true,
      "expand-button-label": "󰍜",
      "collapse-button-label": "󰍜",
      "empty-list-label": "No audio Sources"
    },
    "backlight": {
      "label": "󰃟",
      "min": 1
    },
    "buttons-grid": {
      "buttons-per-row": 4,
      "actions": [
        {
          "label": "",
          "command": "systemctl poweroff"
        },
        {
          "label": "",
          "command": "systemctl reboot"
        },
        {
          "label": "",
          "command": "hyprlock -q --immediate"
        },
        {
          "label": "",
          "command": "uwsm stop"
        }
      ]
    }
  }
}
