#!/bin/bash

INTERVAL=1800 # 30 minutes in seconds

change_wallpaper() {
    while true; do
        waypaper --random
        sleep 3
        ~/.config/hypr/scripts/WalSwww.sh
        ~/.config/hypr/scripts/Refresh.sh
        sleep $INTERVAL
        hyprctl hyprpaper unload unused
    done
}

change_wallpaper
