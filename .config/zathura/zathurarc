set font "JetBrainsMono Nerd Font 15"
set default-bg "#121212"                  # Default background color
set default-fg "#e2e2e2"                  # Default foreground color
set statusbar-bg "#121212"                # Statusbar background color
set statusbar-fg "#e2e2e2"                # Statusbar foreground color
set inputbar-bg "#232323"                 # Inputbar background color
set inputbar-fg "#990000"                 # Inputbar foreground color
set notification-bg "#121212"             # Notification background color
set notification-fg "#e2e2e2"             # Notification foreground color
set notification-error-bg "#990000"       # Error notification background color
set notification-error-fg "#e2e2e2"       # Error notification foreground color
set notification-warning-bg "#FFF712"     # Warning notification background color
set notification-warning-fg "#FFFFFF"     # Warning notification foreground color
set completion-bg "#222222"               # Completion background color
set completion-fg "#e2e2e2"               # Completion foreground color
set completion-group-bg "#121212"         # Completion group background color
set completion-group-fg "#e2e2e2"         # Completion group foreground color
set completion-highlight-bg "#990000"     # Completion highlight background color
set completion-highlight-fg "#222222"     # Completion highlight foreground color
set render-loading-bg "#e2e2e2"           # Loading text background color
set render-loading-fg "#121212"           # Loading text foreground color
set highlight-color "rgba(153,0,0,0.3)"   # Highlight color
set highlight-active-color "rgba(153,0,0,0.5)" # Active highlight color
set highlight-fg "rgba(0,0,0,0.5)"        # Highlighted text color
set signature-success-color "rgba(18%,80%,33%,0.9)" # Valid signature color
set signature-error-color "rgba(92%,11%,14%,0.9)"   # Invalid signature color
set signature-warning-color "rgba(100%,84%,0%,0.9)" # Warning signature color
set recolor-lightcolor "#121212"          # Light color for recoloring
set recolor-darkcolor "#e2e2e2"           # Dark color for recoloring

# General Settings
set database "sqlite"                      # Database backend (plain, sqlite, null)
set filemonitor "glib"                    # File monitor backend
set guioptions " "                        # GUI elements to show (c, s, h, v)
set n-completion-items 15                 # Max completion items
set selection-clipboard "clipboard"       # Clipboard to use (primary, clipboard)
set show-directories true                 # Show directories in completion
set show-hidden false                     # Show hidden files in completion
set show-recent 10                        # Number of recent files to show
set show-signature-information true       # Show signature info
set statusbar-basename true               # Use basename in statusbar
set statusbar-home-tilde true             # Use ~ for home in statusbar
set statusbar-h-padding 0                 # Statusbar horizontal padding
set statusbar-page-percent true           # Show page percentage in statusbar
set statusbar-v-padding 0                 # Statusbar vertical padding
set window-height 600                     # Initial window height
set window-icon-document false            # Use first page as window icon
set window-title-basename true            # Use basename in window title
set window-title-home-tilde true          # Use ~ for home in window title
set window-title-page true                # Show page number in window title
set window-width 800                      # Initial window width

# Document Settings
set abort-clear-search true               # Clear search on abort
set adjust-open "best-fit"                # Auto adjustment mode (best-fit, width)
set advance-pages-per-row false           # Advance pages per row
set continuous-hist-save false            # Save history on every page change
set dbus-raise-window true                # Raise window on D-Bus command
set dbus-service true                     # Enable D-Bus service
set double-click-follow true              # Follow link on double click
set first-page-column "1:2"               # Column for first page
set highlighter-modifier "shift"          # Modifier for highlighter
set incremental-search true               # Incremental search
set jumplist-size 2000                    # Jumplist size
set link-hadjust true                     # Align internal link targets
set link-zoom true                        # Allow zoom change when following links
set nohlsearch false                      # Disable search highlighting
set open-first-page false                 # Always open first page
set page-cache-size 30                    # Max pages in cache
set page-h-padding 1                      # Horizontal page padding
set page-right-to-left false              # Right to left layout
set pages-per-row 1                       # Pages per row
set page-thumbnail-size 4194304           # Max thumbnail size in bytes
set page-v-padding 1                      # Vertical page padding
set recolor-adjust-lightness true         # Adjust lightness when recoloring
set recolor false                         # Enable recoloring
set recolor-keephue true                 # Keep hue when recoloring
set recolor-reverse-video true            # Keep original image colors
set render-loading true                   # Show loading text
set scroll-full-overlap 0.0               # Scroll overlap
set scroll-hstep -1                       # Horizontal scroll step size
set scroll-page-aware true                # Stop scrolling at page boundaries
set scroll-step 40                        # Scroll step size
set scroll-wrap false                     # Wrap scrolling
set search-hadjust true                   # Center search results horizontally
set selection-notification false          # Notify on selection
set synctex-edit-modifier "ctrl"          # Modifier for SyncTeX
set synctex true                          # Enable SyncTeX
set vertical-center true                  # Center page vertically
set zoom-center false                     # Center zooming
set zoom-max 1000                         # Max zoom level
set zoom-min 10                           # Min zoom level
set zoom-step 10                          # Zoom step size

# Navigation
map j scroll full-down
map k scroll full-up
map J scroll down
map K scroll up
map h scroll left
map l scroll right
map d scroll half-down
map u scroll half-up
map <C-t> scroll half-left
map <C-y> scroll half-right
map gg goto top
map G goto bottom
map <Space> scroll full-down
map <S-Space> scroll full-up
map <BackSpace> scroll full-up
map <Tab> toggle_index
map <C-o> jumplist backward
map <C-i> jumplist forward

# Zooming
map + zoom in
map - zoom out
map = zoom 100
map zI zoom in
map zO zoom out
map z0 zoom 100

# Actions
map q quit
map r rotate rotate-cw
map R rotate rotate-ccw
map i recolor
map a adjust_window best-fit
map s adjust_window width
map d toggle_page_mode
unmap <F5> #toggle_presentation
unmap f
map f toggle_fullscreen
map <C-m> toggle_inputbar
map b toggle_statusbar
map <Return> follow
map m mark_add
map <Esc> abort
map p print

map [fullscreen] f toggle_fullscreen
map [fullscreen] i recolor
map [fullscreen] b toggle_statusbar
map [fullscreen] u                scroll half-up
map [fullscreen] d                scroll half-down
map [fullscreen] r                rotate rotate-cw
map [fullscreen] R                rotate rotate-ccw
map [fullscreen] K                scroll up
map [fullscreen] J                scroll down
map [fullscreen] k                scroll full-up
map [fullscreen] j                scroll full-down
map [fullscreen] i                recolor
map [fullscreen] p                print
map [fullscreen] g                goto top
map [fullscreen] G                goto bottom
